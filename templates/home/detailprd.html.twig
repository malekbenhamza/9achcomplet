{% include 'home/navbar2.html.twig' %}
{% block body %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Product Details - 9ACH.TN</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="{{ asset('assets/favicon.ico') }}" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="{{ asset('assets/styles.css') }}" rel="stylesheet" />
    <style>
        .card {
            transition: transform 0.3s;
        }

        .card:hover {
            transform: scale(1.02);
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }

        .product-image {
            max-width: 100%;
            height: auto;
        }

        .product-details {
            margin-top: 2rem;
            text-align: center;
        }

        .product-title {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 1rem;
        }

        .product-price {
            font-size: 1.2rem;
            font-weight: bold;
            color: #f44336;
        }

        .product-description {
            margin-top: 1rem;
            font-size: 1rem;
            color: #777;
        }

        .quantity-input {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 1.5rem;
        }

        .quantity-input-label {
            margin-right: 0.5rem;
        }

        .quantity-input-field {
            width: 50px;
            padding: 0.5rem;
            border: 1px solid #ced4da;
            border-radius: 3px;
            text-align: center;
        }

        .add-to-cart-btn {
            margin-top: 2rem;
        }

        .social-icons {
            margin-top: 3rem;
        }

        .social-icons a {
            display: inline-block;
            margin-right: 1rem;
            color: #fff;
            font-size: 1.5rem;
            transition: color 0.3s;
        }

        .social-icons a:hover {
            color: #f44336;
        }
    </style>
</head>
<body>
<!-- Product Details section -->
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card">
                    <!-- Product image -->
                    <img class="card-img-top product-image" src="{{ product.img }}" alt="Product Image" />
                    <div class="card-body product-details">
                        <!-- Product name -->
                        <h5 class="card-title product-title">{{ product.nom }}</h5>
                        <!-- Product price -->
                        <h6 class="card-subtitle mb-2 text-muted product-price">{{ product.prix }}DT</h6>
                        <!-- Product description -->
                        <p class="card-text product-description">{{ product.description }}</p>
                        <!-- Quantity selection -->
                        <div class="quantity-input">
                            <label for="quantity" class="quantity-input-label">Quantity:</label>
                            <input type="number" id="quantity" name="quantity" class="quantity-input-field" value="1" min="1">
                        </div>
                        <!-- Add to cart button -->
                        <div class="add-to-cart-btn">
                            <a class="btn btn-outline-dark" href="{{ path( 'cart-add',{id:product.id} )}}">Add to Cart</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Social media icons -->
        <div class="row justify-content-center social-icons">
            <a href="https://www.instagram.com/your_instagram_page" target="_blank" rel="noopener" class="text-white me-4">
                <i class="bi bi-instagram fs-3"></i>
            </a>
            <a href="https://www.facebook.com/your_facebook_page" target="_blank" rel="noopener" class="text-white">
                <i class="bi bi-facebook fs-3"></i>
            </a>
        </div>
    </div>
</section>

<!-- Footer -->
<footer class="py-5 bg-dark">
    <div class="container">
        <div class="d-flex justify-content-center">
            <a href="https://www.instagram.com/9ach.tn" target="_blank" rel="noopener" class="text-white me-4">
                <i class="bi bi-instagram fs-3"></i>
            </a>
            <a href="https://www.facebook.com/profile.php?id=100090667951452" target="_blank" rel="noopener" class="text-white">
                <i class="bi bi-facebook fs-3"></i>
            </a>
        </div>
        <p class="m-0 text-center text-white">&copy; 9ach.tn 2023</p>
    </div>
</footer>


<!-- Bootstrap core JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
<!-- Core theme JS -->
<script src="assets/scripts.js"></script>
</body>
</html>

{% endblock %}
