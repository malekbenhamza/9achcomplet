{% include 'home/navbar2.html.twig' %}

<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        .card {
            transition: transform 0.3s;
        }

        .card:hover {
            transform: scale(1.02);
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }
        .product-image {
            height: 400px; /* Set the desired height for the images */
            object-fit: cover; /* Ensure the images maintain their aspect ratio and cover the entire space */
        }
    </style>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>List All Products - 9ACH.TN</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="{{ asset('assets/favicon.ico') }}" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="{{ asset('assets/styles.css') }}" rel="stylesheet" />
</head>
<body>
<!-- Section-->
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row justify-content-center">
            {% for product in produits %}
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card h-100">
                        <!-- Product image -->
                        <a href="{{ path('product_details', {'id': product.id}) }}">
                            <img class="card-img-top product-image" src="{{ product.img }}" alt="..." />
                        </a>
                        <!-- Product details -->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name -->
                                <h5 class="fw-bolder">{{ product.nom }}</h5>
                                <!-- Product price -->
                                {{ product.prix }}DT
                            </div>
                        </div>
                        <!-- Product actions -->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center">
                                <a class="btn btn-outline-dark mt-auto" href="{{ path( 'cart-add',{id:product.id} )}}">add to cart</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>

<!-- Original content section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto">
                <h2 class="text-center">Discover Something Unique</h2>
                <p class="text-center">At 9ACH.TN, we believe in offering you more than just products. We curate a collection of unique and exclusive items that you won't find anywhere else. From handmade crafts to limited-edition designs, explore our special selection and make a statement.</p>
                <p class="text-center"><a class="btn btn-primary" href="#">Shop Now</a></p>
            </div>
        </div>
    </div>
</section>

<!-- Footer-->
<footer class="py-5 bg-dark">
    <div class="container">
        <div class="d-flex justify-content-center">
            <a href="https://www.instagram.com/9ach.tn" target="_blank" rel="noopener" class="text-white me-4">
                <i class="bi bi-instagram fs-3"></i>
            </a>
            <a href="https://www.facebook.com/profile.php?id=100090667951452" target="_blank" rel="noopener" class="text-white">
                <i class="bi bi-facebook fs-3"></i>
            </a>
        </div>
        <p class="m-0 text-center text-white">&copy; 9ach.tn 2023</p>
    </div>
</footer>
