<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        .product-image {
            height: 400px;
            object-fit: cover;
        }

        .carousel-control-prev-icon,
        .carousel-control-next-icon {
            background-color: #000; /* Change the background color of the carousel arrows */
        }

        .carousel-control-prev,
        .carousel-control-next {
            width: 5%; /* Adjust the width of the carousel arrows */
        }

        .carousel-control-prev:hover,
        .carousel-control-next:hover {
            background-color: #333; /* Change the background color on hover */
        }

        .card {
            transition: transform 0.3s; /* Add transition effect to the cards */
        }

        .card:hover {
            transform: scale(1.05); /* Increase the size of the card on hover */
        }
    </style>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>9ach.TN Homepage </title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="{{ asset('assets/favicon.ico') }}" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="{{ asset('assets/styles.css') }}" rel="stylesheet" />
</head>
<body>
{% for flashMessage in app.flashes('success') %}
    <div class="alert alert-success" role="alert">
        {{ flashMessage }}
    </div>
{% endfor %}

<!-- Navigation-->
{% include 'home/navbar2.html.twig' %}
<!-- Header-->
<header class="bg-dark py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">Shop in style</h1>
            <p  class="lead fw-normal text-white-60 mb-0">With 9ACH.TN</p>
        </div>
    </div>
</header>
<!-- Section-->
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div id="productCarousel" class="carousel slide" data-bs-ride="carousel">
            <!-- Carousel Indicators -->
            <ol class="carousel-indicators">
                {% for p in produits|batch(4) %}
                    <li data-bs-target="#productCarousel" data-bs-slide-to="{{ loop.index0 }}" {% if loop.first %}class="active"{% endif %}></li>
                {% endfor %}
            </ol>

            <div class="carousel-inner">
                {% for p in produits|batch(4) %}
                    <div class="carousel-item {% if loop.first %}active{% endif %}">
                        <div class="row justify-content-center">
                            {% for product in p %}
                                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                                    <div class="card h-100">
                                        <!-- Product image -->
                                        <a href="{{ path('product_details', {'id': product.id}) }}">
                                            <img class="card-img-top product-image" src="{{ product.img }}" alt="..." />
                                        </a>
                                        <!-- Product details -->
                                        <div class="card-body p-4">
                                            <div class="text-center">
                                                <!-- Product name -->
                                                <h5 class="fw-bolder">{{ product.nom }}</h5>
                                                <!-- Product price -->
                                                {{ product.prix }}DT
                                            </div>
                                        </div>
                                        <!-- Product actions -->
                                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                            <div class="text-center">
                                                <a class="btn btn-outline-dark mt-auto" href="{{ path( 'cart-add',{id:product.id} )}}">add to cart</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
            </div>

            <!-- Carousel Controls -->
            <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</section>

<!-- Footer-->
<!-- Footer-->
<footer class="py-5 bg-dark">
    <div class="container">
        <div class="d-flex justify-content-center">
            <a href="https://www.instagram.com/9ach.tn" target="_blank" rel="noopener" class="text-white me-4">
                <i class="bi bi-instagram fs-3"></i>
            </a>
            <a href="https://www.facebook.com/profile.php?id=100090667951452" target="_blank" rel="noopener" class="text-white">
                <i class="bi bi-facebook fs-3"></i>
            </a>
        </div>
        <p class="m-0 text-center text-white">&copy; 9ach.tn 2023</p>
    </div>
</footer>

</body>
</html>
