{% include 'home/navbar2.html.twig' %}

{% block body %}
    <br>
    <br>

    <div class="container">
        <h1>Client Details</h1>
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h4>Name:</h4>
                        <p>{{ client.nom }}</p>
                    </div>
                    <div class="col-md-6">
                        <h4>Last Name:</h4>
                        <p>{{ client.prenom }}</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <h4>Phone:</h4>
                        <p>{{ client.tel }}</p>
                    </div>
                    <div class="col-md-6">
                        <h4>Address:</h4>
                        <p>{{ client.adresse }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
