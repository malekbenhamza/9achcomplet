{% extends 'base.html.twig' %}

{% block body %}
        <div class="container">
                <div class="row justify-content-center">
                        <div class="col-md-6">
                                <div class="card">
                                        <div class="card-header">
                                                <h1 class="text-center">Détails du produit</h1>
                                        </div>
                                        <div class="card-body">
                                                <div class="text-center">
                                                        <img src="{{ produit.img }}" class="img-fluid" alt="Product Image">
                                                </div>
                                                <h5 class="card-title text-center">{{ produit.nom }}</h5>
                                                <p class="card-text">{{ produit.description }}</p>
                                                <ul class="list-group list-group-flush">
                                                        <li class="list-group-item"><strong>Quantité en stock:</strong> {{ produit.qtestock }}</li>
                                                        <li class="list-group-item"><strong>Prix:</strong> {{ produit.prix }}</li>
                                                        <li class="list-group-item"><strong>Catégorie:</strong> {{ produit.categorie.nom }}</li>
                                                </ul>
                                        </div>
                                        <div class="card-footer text-center">
                                                <a href="{{ path('app_modifier-produit', {'id': produit.id}) }}" class="btn btn-warning">
                                                        <i class="fas fa-edit"></i> Modifier
                                                </a>
                                                <a href="{{ path('app_produit_supprimer', {'id': produit.id}) }}" class="btn btn-danger"
                                                   onclick="return confirm('Voulez-vous vraiment supprimer ce produit ?')">
                                                        <i class="fas fa-trash-alt"></i> Supprimer
                                                </a>
                                        </div>
                                </div>
                        </div>
                </div>
        </div>

{% endblock %}
